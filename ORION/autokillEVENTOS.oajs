function LootLoadingLag(bodySerial) {
	
	var timer = Orion.Now();

	while (Orion.Now() - timer < 550 ){	
		if(Orion.FindType('-1', '-1', bodySerial).length > 0 )
			break;
				
		Orion.Wait(50);
	}
}


