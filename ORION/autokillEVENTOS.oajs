function IsInBoundaries(x, y, precision, rect){

	 if( x >= rect.Xsmall - precision  && x <= rect.Xbig + precision &&
	     y >= rect.Ysmall - precision  && y <= rect.Ybig + precision )
	{
		return true; //in side rectangle 
	}
	
	return false; //out side rectangle  	
}

